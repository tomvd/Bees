<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <ThingDef ParentName="OrganicProductBase">
        <defName>Bees_Honey</defName>
        <label>honey</label>
        <description>Honey harvested from a beehive. Very sugary and fun to eat while also extremely long-lasting, perfect for taking on caravan trips or fermenting into mead.</description>
        <graphicData>
            <texPath>Things/Item/Resource/AnimalProductRaw/BeesHoney</texPath>
            <graphicClass>Graphic_StackCount</graphicClass>
        </graphicData>
        <socialPropernessMatters>true</socialPropernessMatters>
        <statBases>
            <MarketValue>3</MarketValue>
            <Mass>0.015</Mass>
            <Nutrition>0.075</Nutrition>
            <FoodPoisonChanceFixedHuman>0.001</FoodPoisonChanceFixedHuman>
        </statBases>
        <ingestible>
            <foodType>AnimalProduct</foodType>
			<preferability>RawTasty</preferability>
			<joy>0.10</joy>
			<joyKind>Gluttonous</joyKind>
			<maxNumToIngestAtOnce>4</maxNumToIngestAtOnce>
			<ingestSound>Meal_Eat</ingestSound>
        </ingestible>
        <thingCategories>
            <li>AnimalProductRaw</li>
        </thingCategories>
    </ThingDef>

    <ThingDef ParentName="ResourceBase">
        <defName>Bees_Bees</defName>
        <label>bees</label>
        <description>A small colony of bees and a queen. Can be sold or used to start your own hive.</description>
        <graphicData>
            <texPath>Things/Item/Bees</texPath>
            <graphicClass>Graphic_StackCount</graphicClass>
            <drawSize>(0.75, 0.75)</drawSize>
        </graphicData>
        <resourceReadoutPriority>Middle</resourceReadoutPriority>
        <stackLimit>5</stackLimit>
        <useHitPoints>true</useHitPoints>
        <rotatable>false</rotatable>
        <tickerType>Rare</tickerType>
        <thingCategories>
            <li>ItemsMisc</li>
        </thingCategories>
        <statBases>
            <Mass>1.0</Mass>
            <MaxHitPoints>100</MaxHitPoints>
            <MarketValue>10</MarketValue>
            <DeteriorationRate>1</DeteriorationRate>
        </statBases>
    </ThingDef>    

</Defs>
